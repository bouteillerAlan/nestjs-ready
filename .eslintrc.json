{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "nestjs"
    ],
    "rules": {
        // custom rules
        "padded-blocks": "off",
        "indent": ["error", 2],
        "valid-jsdoc": "error"
    }
}
